#!/bin/sh
#
# Generate the various zsh files in this directory,
# by concatenating the files in the subdirectories.
#
for f in zlogin zlogout zprofile zshenv zshrc; do
  awk 'NR==1 {
          print "##\n#\n# THIS FILE IS AUTOGENERATED - EDIT THE PART FILES, NOT THIS FILE\n#\n##" 
       }
       FNR==1 {
          print "\n##\n#\n# " FILENAME "\n#\n##\n"
       }
       1==1 {
         print
       }' $f.d/*.zsh > $f
done

